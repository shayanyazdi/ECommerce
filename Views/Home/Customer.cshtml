@model Customer

<h1 class="text-center">This is our customer page!</h1>
<br/>
<a href="/">Dashboard</a>
<a href="/product">Products</a>
<a href="/order">Orders</a>
<a href="/customer">Customers</a>
<a href="">Settings</a>
<br/>
<form asp-action="AddCustomer" asp-controller="Home" method="POST">
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control">
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control">
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-dark">Add</button>
</form>
<br/>
<table class="table table-striped table-gray">
    <tr>
        <th>Customer Name</th>
        <th>Create Date</th>
        <th>Actions</th>
    </tr>
    @foreach (var customer in ViewBag.AllCustomers)
    {
        <tr>
            <td>@customer.FirstName @customer.LastName</td>
            <td>@customer.CreatedAt</td>
            <td><a href="/delete/@customer.CustomerId">Delete</a></td>    
        </tr>
    }
</table>